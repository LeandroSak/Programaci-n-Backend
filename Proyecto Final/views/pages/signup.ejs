<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head')%>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/intl-tel-input@17.0.3/build/css/intlTelInput.css">
        <script src="https://cdn.jsdelivr.net/npm/intl-tel-input@17.0.3/build/js/intlTelInput.js"></script>
        <style>
            img {
                width: 2rem;
            }

            strong {
                color: blue;
            }

            #texto {
                font-style: italic;
                color: green;
            }

            .intl-tel-input {
                display: table-cell;
            }

            .intl-tel-input .selected-flag {
                z-index: 4;
            }

            .intl-tel-input .country-list {
                z-index: 5;
            }
        </style>
        <title>Document</title>
</head>

<body>

    <div class="container">
        <div class="row d-flex justify-content-center p-3">
            <form class="col-sm-4 " action="/signupp" method="post">
                <h3 class="text-center">Registrate</h3>
                <div class="mb-3 text-center">
                    <label class="form-label">Email</label>
                    <input type="email" name="username" id="username" class="form-control">
                </div>
                <div class="mb-3 text-center">
                    <label class="form-label">Password</label>
                    <input type="password" name="password" id="password" class="form-control">
                </div>
                <div class="mb-3 text-center">
                    <label class="form-label">Name</label>
                    <input type="text" name="name" id="name" class="form-control">
                </div>
                <div class="mb-3 text-center">
                    <label class="form-label">Age</label>
                    <input type="number" name="age" id="age" class="form-control">
                </div>
                <div class="mb-3 text-center">
                    <label class="form-label">Adress</label>
                    <input type="text" name="adress" id="adress" class="form-control">
                </div>
                <div class="mb-3 text-center">
                    <label class="form-label">Telefono</label>
                    <div class="input-group">
                        <input type="tel" class="form-control" name="phone" id="phone">
                        <input id="ibxCode" type="tel" name="ibxCode" placeholder="Código de País" readOnly />
                        <input  id="submit" type="submit" class="btn" value="Verificar" />
                    </div>
                </div>


                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary" value="Enviar">Submit</button>
                </div>
            </form>
            

        </div>
    </div>
    <div class="row d-flex justify-content-center p-3">
        <form class="col-sm-4 " action="/signin">
            <div class="d-flex justify-content-center">
                <button type="submit"  class="btn btn-primary" value="Enviar">Iniciar Sesion</button>
            </div>
        </form>
    </div>

    </div>

    <script>
        var input = document.querySelector("#phone");
        var ibxCode = document.querySelector("#ibxCode");
        var iti = window.intlTelInput(input, {
            //separateDialCode: true,
            utilsScript: "https://cdn.jsdelivr.net/npm/intl-tel-input@17.0.3/build/js/utils.js",
        });
        window.iti = iti;
        document.getElementById("submit").addEventListener("click", function (e) {
            e.preventDefault();
            const phoneNumber = iti.getNumber();
            const activeItem = iti.activeItem.dataset;
            ibxCode.value = phoneNumber

        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
    <script src="/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>