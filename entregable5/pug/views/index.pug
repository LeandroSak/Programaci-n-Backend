doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        title Inicio
    body 
        .container
            .row.d-flex.justify-content-center.p-3
                h3.text-center Agregar Producto
                form.col-sm-4.border.border-dark.rounded-3.p-4(action='/productos' method='post')
                    .mb-3.text-center
                        label.form-label Nombre
                        input.form-control(type='text' name='title')
                    .mb-3.text-center
                        label.form-label Precio
                        input.form-control(type='number' name='price' step='0.01')
                    .d-flex.justify-content-center
                        button.btn.btn-primary(type='submit' value='Guardar') Guardar
            br
            br
            .row.d-flex.justify-content-center
                form.col-sm-4(action='/productos' method='get')
                    h3.text-center Productos
                    .d-flex.justify-content-center
                        button.btn.btn-primary(type='submit') Lista
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous") 