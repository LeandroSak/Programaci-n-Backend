doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        title Productos
    body
        .container
            .row.justify-content-center.p-2
                .col-sm-6
                    h2.text-center Lista de productos
                    if listExist.length != 0
                        table.table.table-dark.table-striped
                            thead
                                tr
                                    th(scope='col') Nombre
                                    th(scope='col') precio
                            tbody
                                each item in listProducts
                                    tr
                                        td=item.title
                                        td=item.price
                    else 
                        .alert.alert-danger.text-center(role='alert') No hay productos
            br
            br
            .row.justify-content-center
                form.col-sm-4(action='/' method='get')
                    h3.text-center Formulario
                    .d-flex.justify-content-center
                        button.btn.btn-primary(type='submit') Formulario

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")  